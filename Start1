int main()
{
	signed int num1;

		printf("Enter Number : ");
		scanf("%d", &num1);
		
		if (num1>0 && num1 % 2 == 0)
		{
			printf("Positive even");
		}
		else if (num1>0 && num1 % 2 == 1)
		{
			printf("Positive odd");
			
		}

		if (num1 < 0 && num1 % 2 == 0)
		{
			printf("Neg even");
		}
		else if (num1 < 0 && num1 % 2 == 1)
		{
			printf("Neg odd");
		}

	return 0;
}
